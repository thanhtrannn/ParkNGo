@model ParkNGo.Models.User
@{
    ViewData["Title"] = "Home Page";
}

<h2>Login</h2>
<hr />
<div class="container-fluid row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <span class="sr-only">Success:</span>
                @TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <span class="sr-only">Error:</span>
                @TempData["Error"]
            </div>

        }
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <div class="row">
                    <div class="col-md-6 col-xs-6">
                        <a asp-area="" asp-controller="Home" asp-action="Register">Register</a>
                    </div>
                    <div class="col-md-6 col-xs-6 forgot-password-section">
                        <a asp-area="" asp-controller="Home" asp-action="Forgot">Forgot Password</a>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Login" />
            </div>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>
