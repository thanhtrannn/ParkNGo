<!DOCTYPE html>
<style>
    .navbar-inverse {
        background-color: #152238 !important;
        border-color: #152238 !important;
    }

    .main-section {
        height: 100%;
        width: 100%;
        margin: 0;
        padding: 0;
    }

    .remove-padding {
        padding: 0 !important;
        margin: 0 !important;
    }

    body {
        padding: 0px;
    }

    .navbar-right {
        margin-right: 15px !important;
    }

    .navbar-brand {
        margin-left: 15px !important;
    }

    .navbar {
        height: 6vh;
        margin-bottom: 0px !important;
    }

    .navbar-inverse .navbar-brand {
        color: white !important;
    }

    #topleft-username, .glyphicon-user {
        color: white;
    }

    @@media only screen and (max-width: 768px) {
        .navbar {
            height: auto;
            min-height: 6vh;
            margin-bottom: 0px !important;
        }

        .navbar-brand {
            margin-left: 0px !important;
        }
    }

    /* Footer Section */
    footer {
        position: fixed;
        height: 6vh;
        background-color: #152238;
        bottom: 0px;
        left: 0px;
        right: 0px;
        margin-bottom: 0px;
        color: white;
        line-height: 50px;
        text-align: center;
    }

    .icon-area {
        text-align: right;
    }

    .forgot-password-section {
        text-align: right;
    }
    /* Always set the map height explicitly to define the size of the div
       * element that contains the map. */
    #map {
        height: 88vh;
        width: 100%;
    }
    /* Optional: Makes the sample page fill the window. */
    html, body {
        margin: 0;
        padding: 0;
    }

    .property-img {
        max-height: 100px;
        max-width: 50px;
    }

    #image_upload_preview {
        text-align: center;
        max-height: 400px;
        width: auto;
        height: auto;
        margin: 25px 0px;
    }

    .infowindow {
        height: 50vh;
        width: 50vh;
    }

    .cc-image {
        max-width: 200px;
    }

    .property-preview-img {
        margin: 0px auto;
    }

    .property-description-sec {
        height: 15vh;
        overflow: auto;
        text-overflow: ellipsis;
    }

    #review-section {
        height: 10vh;
        overflow: auto;
        text-overflow: ellipsis;
    }

    .property-detail-btn {
        margin: 0px auto;
    }

    .checked {
        color: orange;
    }

    #reviewModal{
        color:black;
    }
</style>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ParkNGo</title>
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-aJ21OjlMXNL5UyIl/XNwTMqvzeRMZH2w8c5cRVpzpU8Y5bApTppSuUkhZXN0VxHd">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

</head>

<body>
    <partial name="_CookieConsentPartial" />
    <div class="main-section container body-content">
        <nav class=" navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Main" class="navbar-brand">ParkNGo</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <span class="glyphicon glyphicon-user"></span>
                            @if (@ViewData["Username"] != null)
                            {
                                <span id="topleft-username">@ViewData["Username"]</span>
                            }
                            else
                            {
                                <span id="topleft-username">Username</span>
                            }
                        </a>
                        <ul id="username-dropdown" class="dropdown-menu dropdown-items"></ul>
                    </li>
                </ul>
            </div>
        </nav>
        @RenderBody()
        <!-- Footer section -->
        <footer class="row">
            <div class="col-sm-4">123 Fake Street, Hamilton ON L9A 5K1</div>
            <div class="col-sm-4">support@parkforcheap.ca - (905) 921-5160</div>
            <div class="col-sm-4 icon-area">
                <a href="#"><img src="~/images/icons/linkedin32.png" /></a>
                <a href="#"><img src="~/images/icons/facebook32.png" /></a>
                <a href="#"><img src="~/images/icons/twitter32.png" /></a>
                <a href="#"><img src="~/images/icons/youtube32.png" /></a>
            </div>
        </footer>
    </div>


    @RenderSection("Scripts", required: false)
</body>
</html>
