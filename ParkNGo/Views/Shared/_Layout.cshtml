    // gets success/error message and append to div class
    var getMessage = function (type, div, msg) {
        var message = msg;
        var view = type;
        $.ajax({
            type: 'GET',
            dataType: 'Html',
            url: "GetViewComponent",
            data: {"view": view, "component": "Additional", "message":message},
            complete: function (data, textStatus, jqXHR) {
                console.log(data)
                $("." + div).html(data.responseText);
            },
            error: function (jqXHR, textStatus, errorThrown) {
                console.log("fail");
            }
        });
    }

    var getDropdown = function () {
        var user = "@ViewData["Username"]";
        var role = "@ViewData["Role"]";
        // append admin page to shortcut
        if (role === "Admin") {
            $("#username-dropdown").append("<li><a href='/Admin'>Admin</a></li>")
        }
        if (user != "") {
            if ($("#my-account").length == 0) {
                $("#username-dropdown").append("<li id='my-account'><a href='/Home/Account'>My Account</a></li>")
            }
            if ($("#logout").length == 0) {
                $("#username-dropdown").append("<li id='logout'><a href='/Home/Logout'>Logout</a></li>")
            }
        }
    };

