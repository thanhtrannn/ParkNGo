@model ParkNGo.Models.User

@{
    ViewData["Title"] = "Update Account Information";
}
<div class="container-fluid">
    <h2>@ViewData["Title"]</h2>
    <hr />
    <form method="post">
        <div class="form-group">
            <div class="form-group row">
                <div class="col-sm-3">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                </div>
                <div class="col-sm-3">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                </div>
                <div class="col-sm-3">
                    <label asp-for="BirthDate" class="control-label"></label>
                    <input asp-for="BirthDate" class="form-control" />
                </div>
                <div class="col-sm-3">
                    <label asp-for="Gender" class="control-label"></label>
                    <input asp-for="Gender" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-8">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="col-sm-4">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
            </div>
            <div class="form-group row">
                <div class="col-sm-4">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control" />
                </div>
                <div class="col-sm-4">
                    <label asp-for="ProvinceId" class="control-label"></label>
                    <input asp-for="ProvinceId" class="form-control" />
                </div>
                <div class="col-sm-4">
                    <label asp-for="PostalCode" class="control-label"></label>
                    <input asp-for="PostalCode" class="form-control" />
                </div>
                </div>
                @Html.HiddenFor(x => x.Password)
                @Html.HiddenFor(x => x.SecretQuestion1)
                @Html.HiddenFor(x => x.SecretQuestion2)
                @Html.HiddenFor(x => x.SecretAnswer1)
                @Html.HiddenFor(x => x.SecretAnswer2)
                @Html.HiddenFor(x => x.Role)
                @Html.HiddenFor(x => x.Username)
                <br />
                <input type="submit" class="btn btn-primary" value="Update" />
                <a href="/Home/Account" class="btn btn-danger">Back</a>
            </div>
</form>
</div>

<script>
    $(document).ready(function () {

    });

</script>
